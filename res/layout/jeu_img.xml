<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	
	<fr.ldu.android.floodit.image.view.FloodItImageView android:layout_width="match_parent" android:id="@+id/imageView"
		android:layout_height="0px" android:layout_weight="1" android:layout_gravity="center" android:gravity="center"/>
	
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/controles" android:gravity="center" android:layout_margin="5dp">
	    <Button android:id="@+id/btnRouge" android:text="" android:width="40dp" android:height="40dp" 
	    	android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
	    	android:onClick="changeCouleur"
	    	android:padding="5dip"/>
	    <Button android:id="@+id/btnVert" android:text="" android:width="40dp" android:height="40dp" 
	    	android:layout_height="wrap_content" android:layout_width="wrap_content" 
	    	android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
	    	android:onClick="changeCouleur"
	    	android:padding="5dip"/>
	    <Button android:id="@+id/btnBleu" android:text="" android:width="40dp" android:height="40dp" 
	    	android:layout_height="wrap_content" android:layout_width="wrap_content" 
	    	android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
	    	android:onClick="changeCouleur"
	    	android:padding="5dip"/>
	</LinearLayout>
	
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/controles" android:gravity="center" android:layout_margin="5dp">
	    <Button android:id="@+id/btnYellow" android:text="" android:width="40dp" android:height="40dp" 
	    	android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
	    	android:onClick="changeCouleur"
	    	android:padding="5dip"/>
	    <Button android:id="@+id/btnCyan" android:text="" android:width="40dp" android:height="40dp" 
	    	android:layout_height="wrap_content" android:layout_width="wrap_content" 
	    	android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
	    	android:onClick="changeCouleur"
	    	android:padding="5dip"/>
	    <Button android:id="@+id/btnPurple" android:text="" android:width="40dp" android:height="40dp" 
	    	android:layout_height="wrap_content" android:layout_width="wrap_content" 
	    	android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
	    	android:onClick="changeCouleur"
	    	android:padding="5dip"/>
	</LinearLayout>
	
</LinearLayout>
